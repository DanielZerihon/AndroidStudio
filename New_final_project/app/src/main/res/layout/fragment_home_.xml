<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D81B60"
    tools:context=".fragment.Home_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/annie_use_your_telescope"
                android:gravity="center"
                android:text="Sitter Me Up"
                android:textColor="@color/Brown2"
                android:textSize="50sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/baby_icon" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <LinearLayout
            android:id="@+id/layout_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Email_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="Email"
                android:textColor="@color/Hard_brown"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_log_in_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/annie_use_your_telescope"
                android:gravity="left"
                android:hint="Enter Your Email Please"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Password_txtview_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="Password"
                android:textColor="@color/Hard_brown"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText_log_in_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/annie_use_your_telescope"
                android:gravity="left"
                android:hint="Enter Your Password"
                android:inputType="textPersonName"
                android:onClick="login_func"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/log_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Brown2"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="Sign"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/reg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Brown2"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="register"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Brown2"
                android:fontFamily="@font/annie_use_your_telescope"
                android:text="Guest"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            android:text="daniel12@gmail.com" --><![CDATA[
        />

        ]]><!--            android:text="123456" --><![CDATA[
        />





        ]]>
    </LinearLayout>

</FrameLayout>